{
  "compileOnSave": false,
  "compilerOptions": {
    "downlevelIteration": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "../node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "types": [
      "jest"
    ],
    "baseUrl": ".",
    "paths": {
      "@env/*": ["src/environments/*"],
      "@lib/*": ["src/app/library/*"],
      "@features/*": ["src/app/features/*"],
      "@app/*": ["src/app/*"],
      "@shared/*": ["../shared/*"]
    }
  }
}
